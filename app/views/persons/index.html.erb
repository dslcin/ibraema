<p id="notice"><%= notice %></p>

<h1>Persons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>CPF</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @persons.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.cpf %></td>
        <td><%= person.email %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_user_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

